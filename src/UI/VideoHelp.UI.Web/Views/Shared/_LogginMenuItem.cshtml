@using VideoHelp.UI.Web

<script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"> </script>

@if (UserManager.IsUserLogged)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Request.Cookies[UserManager.CURRENT_USER_NAME].Value<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Logoff", "Authentication")"><i class="icon-time"></i> Выход</a>
