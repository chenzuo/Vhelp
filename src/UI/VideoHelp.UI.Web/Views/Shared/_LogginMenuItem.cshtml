@using VideoHelp.UI.Web

<script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"> </script>

@if (UserManager.IsUserLogged)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Request.Cookies[UserManager.CURRENT_USER_NAME].Value<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Logoff", "Authentication")"><i class="icon-time"></i> Выход</a>
            </li>
        </ul>
    </li>
}
else
{
    <li>
        <script src="http://ulogin.ru/js/ulogin.js"></script>
        <a href="#" id="uLogin" x-ulogin-params="display=window;fields=first_name,last_name,photo;redirect_uri=http%3A%2F%2F"><div><img src="@Url.Content("~/Content/img/user.png")" style="vertical-align: top"/> Вход</div></a>
    </li>
    @*<li><a data-toggle="modal" href="#logginDialog">Вход</a></li>*@
}