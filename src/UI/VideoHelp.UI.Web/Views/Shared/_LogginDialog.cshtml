@using VideoHelp.UI.Web
@if (!UserManager.IsUserLogged)
{
    <div class="modal hide fade" id="logginDialog">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>Вход</h3>
        </div>
        <div class="modal-body" style="text-align: center">
            <script src="http://loginza.ru/js/widget.js" type="text/javascript"> </script>
            <iframe src="http://loginza.ru/api/widget?overlay=loginza&token_url=@Url.Action("LoginzaLogin", "Authentication", null, "http")" 
                    style="height: 180px; width: 400px;" scrolling="no" frameborder="no"></iframe>
        </div>
        <div class="modal-footer">
            <a href="#" data-dismiss="modal" class="btn">Закрыть</a>
        </div>
    </div>
}