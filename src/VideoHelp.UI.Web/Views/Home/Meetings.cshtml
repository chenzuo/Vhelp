@using VideoHelp.ReadModel.Meeting
@model IEnumerable<VideoHelp.ReadModel.Meeting.MeetingListView>

@{
    ViewBag.Title = "Митинги :)";
}


<div style="height: 100%; width: 100%; position: absolute;background: beige;">
    <div style="width: 12%; height: 100%;background: blue; position: absolute;">
    
    </div>

    <div style="width: 88%; height: 100%; position: absolute;left: 12%;">
    
        <div class="container-fluid">
            <div class="span6">
      
                <div class="page-header">
                    <h1>Список митингов <small>Выбери или создай</small></h1>
                </div>
   

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Создал</th>
                            <th>Дата</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MeetingListView meeting in Model){    
                            <tr>
                                <td>@meeting.Name</td>
                                <td>@meeting.OwnerNick</td>
                                <td>@meeting.CreationDate.ToLocalTime()</td>
                            </tr>
                        }
                    </tbody>
                </table>
      
                @using (Html.BeginForm("CreateMeeting", "Home")) {
                    @Html.TextBox("newRoomName")
                    <input type="submit" value="submit" />
                }

            </div>

        </div>
    </div>

</div>