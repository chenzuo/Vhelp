@using VideoHelp.ReadModel.Meeting
@model IEnumerable<VideoHelp.ReadModel.Meeting.MeetingListView>

@{
    ViewBag.Title = "Митинги :)";
}

<section id="javascript">
    <div class="page-header">
        <h1>Список митингов <small>Выбери или создай</small></h1>
    </div>

    <div class="row">
        <table class="table table-striped">
        <thead>
          <tr>
            <th>Название</th>
            <th>Создал</th>
            <th>Дата</th>
          </tr>
        </thead>
        <tbody>
        @foreach (MeetingListView meeting in Model){    
            <tr>
                <td>@meeting.Name</td>
                <td>@meeting.OwnerNick</td>
                <td>@meeting.CreationDate.ToLocalTime()</td>
            </tr>
        }
        </tbody>
      </table>
      
      @using (Html.BeginForm("CreateMeeting", "Home")) {
          @Html.TextBox("newRoomName")
        <input type="submit" value="submit" />
      }


    </div> 

</section>